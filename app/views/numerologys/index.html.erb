<div class="row">
	<div class="col-sm-6">
		<div class="panel panel-primary">
		  <div class="panel-heading">
		    <h3 class="panel-title">Numerology</h3>
		  </div>
		  <div class="panel-body">
		    <%= form_tag numerologys_getfavs_path do %>
			  	<div class="form-group">
			      <%= label_tag :name %><br />
			      <%= text_field_tag :name, "",autofocus: true, class: "form-control", placeholder: "Enter Name" %>
			    </div>

			    <div class="form-group">
			      <%= label_tag :date_of_birth %>
			      <% born_on = Time.now %>
			      <div class="form-control">
			      	<%= select_date(born_on, order: [ :day,:month,:year], html_options: {class: "form-control"}, date_separator: '-',  prompt: { day: 'Select day', month: 'Select month', year: 'Select year' }) %>	
			      </div>
			      
			    </div>
			    <!-- <%= date_select :dateinstructed, :order => [:day, :month, :year] %> -->
		<!-- 	    <div class="form-group">
			      <%= label_tag :date_of_birth %>
			      <%= date_field("born_on","", class: "form-control") %>
			    </div>
		 -->
			    
		<!-- 
			    <div class="form-group">
			      <%= label_tag :date_of_birth %>
			      <%= select_date(Time.now, discard_type: true) %>
			    </div>
		 -->
		 					
			 		<div class="form-group">
			      <%= label_tag :option, "Choose Your Option" %>
			    
			 			<div class="radio">
			 				<%= label_tag do %>
			 					<%= radio_button_tag 'method', 'luckynumber' %> Lucky Number
			 				<%end%>
			 			</div>

			 			<div class="radio">
			 				<%= label_tag do %>
			 					<%= radio_button_tag 'method', 'cellnumbermatch' %> Cell Number Matc
			 				<%end%>
			 			</div>

			 			<div class="radio">
			 				<%= label_tag do %>
			 					<%= radio_button_tag 'method', 'vehiclenumbermatch' %> Vechicle NUmber Match
			 				<%end%>
			 			</div>

			 			<div class="radio">
			 				<%= label_tag do %>
			 					<%= radio_button_tag 'method', 'digital' %> Digital
			 				<%end%>
			 			</div>

			 			<div class="radio">
			 				<%= label_tag do %>
			 					<%= radio_button_tag 'method', 'friendship' %> Friendship
			 				<%end%>
			 			</div>

			 			<div class="radio">
			 				<%= label_tag do %>
			 					<%= radio_button_tag 'method', 'getfavs' %> Get Favorites
			 				<%end%>
			 			</div>
		 			</div>
					
		 			<div class="form-group">
			      <%= submit_tag "Get Result", class: "btn btn-success btn-block" %>
			    </div>
			    
			  <%end%>
		  </div>
		</div>
		
		
	</div>
	<div class="col-sm-6">
		<div class="panel panel-success">
		  <div class="panel-heading">
		    <h3 class="panel-title">Result</h3>
		  </div>
		  <div class="panel-body" id="result">
		    To get the result fill the form and submit.
		  </div>
		</div>
	</div>
</div>  
