<div class="container">
<h2 class="page-header font-white">Edit <%= resource_name.to_s.humanize %></h2>

  <div class="row">
    <div class="col-sm-6">
    <%= image_tag "sign-up.jpg", class: "img-responsive" %>
    </div>
    <div class="col-sm-6 well">
      
    


<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  
        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email" %>    
        </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>


        <div class="form-group">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Enter Password" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off",class: "form-control", placeholder: "Re-enter Password" %>
        </div>

        <div class="form-group">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
  </div>

        <div class="form-group">
          <%= f.label :avatar, "Photo" %>
          <%= f.file_field :avatar  %>

          <p class="help-block">Example block-level help text here.</p>
        </div>

        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control", placeholder: "Enter Name" %>
        </div>

        <div class="form-group">
          <%= f.label :gender %>
          <div class="row">     
            <div class="col-xs-3">
              <div class="radio">
              <%= label_tag do %>
                <%= radio_button_tag :gender, true %> Male
              <%end%>
            </div>
            </div>
            <div class="col-xs-9">
              <div class="radio">
              <%= label_tag  do %>
                <%= radio_button_tag :gender, false %> Female
              <%end%>
            </div>
            </div>
          </div>  
      </div>  

        <div class="form-group">
          <%= f.label :phone %>
          <%= f.text_field :phone,class: "form-control", placeholder: "Phone" %>
        </div>

        <div class="form-group">
          <%= label_tag :option, "Choose Your Type" %>
          <div class="row">
            <div class="col-sm-6">
              <div class="radio">            
                <%= label_tag do %>
                  <%= radio_button_tag 'paid', false %> Free User
                <%end%>
              </div>
            </div>
            <div class="col-sm-6">
              <div class="radio">
                <%= label_tag do %>
                  <%= radio_button_tag 'paid', true %> Life Time User (Paid)
                <%end%>
              </div>
            </div>
          </div>
        </div>
        <div id="paid">
          <div class="form-group">
            <%= f.label :aadhar_card %>
            <%= f.text_field :aadhar_card, class: "form-control", placeholder: "Aadhar Card Number" %>
          </div>


          <div class="form-group">
            <%= label_tag :option, "Choose Your Option" %>
            <div class="row">
              <div class="col-sm-6">
                <div class="radio">
                  <%= label_tag do %>
                    <%= radio_button_tag 'customer_type', 'old' %> Old Customer
                  <%end%>
                </div>
              </div>
              <div class="col-sm-6">
                <div class="radio">
                  <%= label_tag do %>
                    <%= radio_button_tag 'customer_type', 'new' %> New Customer
                  <%end%>
                </div>
              </div>
            </div>
          </div>

          <div class="form-group" id="reference-no">
            <%= f.label :reference_no, "Reference Number" %>
            <%= f.text_field :reference_no, class: "form-control", placeholder: "Enter the reference number" %>
          </div>

          <div class="form-group">
            <%= f.label :address %>
            <%= f.text_area :address, class: "form-control", placeholder: "Enter the reference number" %>
          </div>        
        </div>

         <div class="actions">
    <%= f.submit "Update", class: "btn btn-primary btn-block" %>
  </div>
<% end %>
    <div class="col-sm-6"></div>

  </div>  
</div>
<script type="text/javascript">
$(document).ready(function() {
  $('#reference-no').hide();
  $('#paid').hide();

  $('input[type=radio][name=paid]').change(function() {
    if (this.value == 'true') {            
      $('#paid').show();            
    }
    else if (this.value == 'false') {
      $('#paid').hide();
    }
  });
  $('input[type=radio][name=customer_type]').change(function() {
    if (this.value == 'old') {            
      $('#reference-no').show();            
    }
    else if (this.value == 'new') {
      $('#reference-no').hide();
    }
  });
});
</script>