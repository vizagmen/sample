<br>
<div class="container">
  <div class="row">    
    <div class="col-sm-6 hidden-xs">
    <%= image_tag "sign-up.jpg", class: "img-responsive" %>
    </div>
    <div class="col-sm-6 well">
      <h2 class="page-header">Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), multipart: true) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email" %>    
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Enter Password" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off",class: "form-control", placeholder: "Re-enter Password" %>
        </div>

        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control", placeholder: "Enter Name" %>
        </div>

        <div class="form-group">
          <%= f.label :avatar, "Photo" %>
          <%= f.file_field :avatar  %>
          <p class="help-block">Upload pic for your profile.</p>
        </div>

        <div class="form-group">
          <%= f.label :gender %>
          <div class="row">     
            <div class="col-xs-3">
              <div class="radio">
              <%= label_tag do %>
                <%= f.radio_button :gender, true %> Male
              <%end%>
            </div>
            </div>
            <div class="col-xs-9">
              <div class="radio">
              <%= label_tag  do %>
                <%= f.radio_button :gender, false %> Female
              <%end%>
            </div>
            </div>
          </div>  
        </div>

        <div class="form-group">
          <%= label_tag :dob, "Your Date of Birth" %>
          <% born_on = Time.now %>
          <div class="form-control">
            <%= f.date_select( :dob, order: [ :day,:month,:year], html_options: {class: "form-control"}, date_separator: '-',  prompt: { day: 'Select day', month: 'Select month', year: 'Select year' }, :start_year=>Date.today.year-100) %> 
          </div>            
        </div>

        <div class="form-group">
          <%= f.label :phone %>
          <%= f.text_field :phone,class: "form-control", placeholder: "Phone" %>
        </div>

        <div class="form-group">
          <%= f.label :aadhar_card %>
          <%= f.text_field :aadhar_card, class: "form-control", placeholder: "Aadhar Card Number" %>
        </div>

        <div class="form-group">
          <%= label_tag :option, "Choose Your Type" %>
          <div class="row">
            <div class="col-sm-6">
              <div class="radio">            
                <%= label_tag do %>
                  <%= radio_button_tag 'paid', false %> Free User
                <%end%>
              </div>
            </div>
            <div class="col-sm-6">
              <div class="radio">
                <%= label_tag do %>
                  <%= radio_button_tag 'paid', true %> Life Time User (Paid)
                <%end%>
              </div>
            </div>
          </div>
        </div>
      
        <div class="form-group">
          <%= label_tag :option, "Choose Your Option" %>
          <div class="row">
            <div class="col-sm-6">
              <div class="radio">
                <%= label_tag do %>
                  <%= radio_button_tag 'customer_type', 'old' %> Old Customer
                <%end%>
              </div>
            </div>
            <div class="col-sm-6">
              <div class="radio">
                <%= label_tag do %>
                  <%= radio_button_tag 'customer_type', 'new' %> New Customer
                <%end%>
              </div>
            </div>
          </div>
        </div>

        <div class="form-group" id="serial-no">
          <%= f.label :serial_no, "Serial Number" %>
          <%= f.text_field :serial_no, class: "form-control", placeholder: "Enter the serial number" %>
        </div>

        <div class="form-group" id="reference-no">
          <%= f.label :reference_no, "Reference Number" %>
          <%= f.text_field :reference_no, class: "form-control", placeholder: "Enter the reference number who referes you" %>
        </div>

        <div class="form-group">
          <%= f.label :address %>
          <%= f.text_area :address, class: "form-control", placeholder: "Enter the reference number" %>
        </div>        
        
        <div class="actions">
          <%= f.submit "Sign up", class: "btn btn-success btn-block btn-lg" %>
        </div>
      <% end %>
      
    </div>
  </div>
</div>

<script type="text/javascript">
$(document).ready(function() {
  $('#serial-no').hide();
  
  $('input[type=radio][name=customer_type]').change(function() {
    if (this.value == 'old') {            
      $('#serial-no').show();            
    }
    else if (this.value == 'new') {
      $('#serial-no').hide();
    }
  });
});
</script>