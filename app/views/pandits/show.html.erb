<div class="row">
  <div class="col-sm-6">
    <h4 class="page-header"><%= @pandit.user.name.capitalize %></h4>

    <dl class="dl-horizontal">
      <dt>Photo</dt>
      <dd><%= image_tag(@pandit.user.avatar.url, class: "img-responsive") %></dd>
    </dl>
    <!-- <dl class="dl-horizontal">
      <dt>Email</dt>
      <dd><%=@pandit.user.email%></dd>
    </dl>
    <dl class="dl-horizontal">
      <dt>Contact</dt>
      <dd><%=@pandit.user.phone%></dd>
    </dl> -->
    <dl class="dl-horizontal">
      <dt>Date of Birt</dt>
      <dd><%=@pandit.user.dob%></dd>
    </dl>
    <dl class="dl-horizontal">
      <dt>Address</dt>
      <dd><%= "#{@pandit.door_no}" if @pandit.door_no.present?%>
        <%= ", #{@pandit.street}" if @pandit.street.present?%>
        <%= ", #{@pandit.city}" if @pandit.city.present?%>
        <%= ", #{@pandit.state}" if @pandit.state.present?%>
        <%= " - #{@pandit.zip_code}" if @pandit.zip_code.present?%>
      </dd>
    </dl>
    <dl class="dl-horizontal">
      <dt>Aadhar Number</dt>
      <dd><%=@pandit.user.aadhar_card%></dd>
    </dl>
    <dl class="dl-horizontal">
      <dt>Deals</dt>
      <dd><%=@pandit.deals %></dd>
    </dl>
  </div>
  <div class="col-sm-6">
    <h4 class="page-header">Want To Book This Pandit
      <small>Then Click Book now</small>
    </h4>

    <%= form_tag  book_pandit_pandit_path, :method => :post , class: "well-sm" do %>

    <div class="form-group">
      <label for="exampleInputEmail3">Booking Date</label>
      <div class="form-control">
        <%= date_select( :booking_date, order: [ :day,:month,:year], html_options: {class: "form-control"}, date_separator: '-',  prompt: { day: 'Select day', month: 'Select month', year: 'Select year' }, :start_year=>Date.today.year-100) %>
      </div>
  </div>

    <div class="form-group">
      <label for="exampleInputEmail3">Reason</label>
      <textarea name="description" class="form-control" rows="8" cols="40" id="description" placeholder="Note"></textarea>
    </div>

    <button type="search" class="btn btn-success">Book Now</button>

    <% end %>

  </div>
</div>
